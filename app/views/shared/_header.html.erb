<header class="navbar-fixed-top navbar-default">
  <div class="container">
    <a class="navbar-brand scripty" href="<%= root_url %>#">CodeBytes</a>
    <nav>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Courses <span class="caret"></span></a>
          <ul class="dropdown-menu pull-right">
            <% all_courses.each do |course| %>
              <li><a href="/#/courses/<%= course.id %>">
                <%= course.title %>
              </a></li>
            <% end %>
          </ul>
        </li>
        <% if logged_in? %>
          <script type="text/javascript">window.logged_in = true</script>
          <li><%= link_to "Profile", "/#/profile" %></li>
          <li><%= link_to "Log Out", session_url, method: :delete %></li>
        <% else %>
          <script type="text/javascript">window.logged_in = false</script>
          <li><%= link_to "Log In", login_url %></li>
          <li><%= link_to "Sign Up", register_url %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
